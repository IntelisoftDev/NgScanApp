<Window x:Name="NgScanApp" x:Class="NgScanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NgScanApp"
        mc:Ignorable="d"
        Title="NgScanApp" Height="600" Width="1024" WindowState="Maximized">
    <Grid Background="Black">
        <Grid x:Name="GridR" HorizontalAlignment="Right" Width="281" Background="#FF191919">
            <Button x:Name="ScanBtn" HorizontalAlignment="Center" Margin="104,90,102,0" VerticalAlignment="Top" Width="75" Click="ScanBtn_Clicked" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                <Image Source="Scanner.png"/>
            </Button>
            <Button x:Name="SettingsBtn" HorizontalAlignment="Left" Margin="18,21,0,0" VerticalAlignment="Top" Width="51" Click="onSettingsCliked" Height="34" RenderTransformOrigin="0.655,1.215" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}">
               <Image Source="settingsIco.png" OpacityMask="White" />
            </Button>
            <ComboBox x:Name="DeviceCmb" HorizontalAlignment="Center" Margin="80,250,81,0" VerticalAlignment="Top" Width="120" BorderBrush="#FFACACAC" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
            <ComboBox x:Name="DeviceIdCmb" HorizontalAlignment="Left" Margin="53,173,0,0" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
        </Grid>
        <Grid x:Name="GridL" Margin="0,0,286,0">
            <Image x:Name="ScanView"/>
        </Grid>

    </Grid>
</Window>

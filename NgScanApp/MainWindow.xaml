<Window x:Name="NgScanApp" x:Class="NgScanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NgScanApp"
        mc:Ignorable="d"
        Title="NgScanApp" Height="629.109" Width="1024" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Black">
        <Grid x:Name="GridR" HorizontalAlignment="Right" Width="281" Background="#FF191919" Margin="0,-10,5,0">
            <Grid Width="200" Height="203" Margin="45,26,36,0" VerticalAlignment="Top">
                <Button x:Name="ScanBtn" Style="{DynamicResource NoChromeButton}" Height="60" Width="63" Background="{x:Null}" Margin="14,69,123,74" Click="ScanBtnClicked" BorderBrush="White">
                    <Grid Width="48" Height="48">
                        <Image Source="Scanner.png" Width="48" Height="48" VerticalAlignment="Top"/>
                        <Label Content="Scan" Foreground="White" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>
                    </Grid>
                </Button>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="112,110,108,0"/>
                <ComboBox x:Name="DeviceCmb" HorizontalAlignment="Center" Margin="40,178,40,0" VerticalAlignment="Top" Width="120" BorderBrush="#FFACACAC" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
                <ComboBox x:Name="DeviceIdCmb" HorizontalAlignment="Left" Margin="53,173,0,0" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
                <Button x:Name="previewBtn" Content="Preview" HorizontalAlignment="Left" Margin="98,85,0,0" VerticalAlignment="Top" Width="75" Click="previewBtnClicked"/>
            </Grid>
            <Grid Margin="11,279,7,134" Background="#FF646464" x:Name="propList" Height="195">
                <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="253" BorderBrush="{x:Null}" Background="#FF646464" Margin="0,10,0,0">
                    <TabItem Header="General" Background="#FF464646">
                        <Grid Background="#FF646464" Margin="0,0,-12,0" Height="100" VerticalAlignment="Top">
                            <Grid Width="124" Height="100" Margin="10,10,0,-10" HorizontalAlignment="Left">
                                <Label Content="Color Mode" HorizontalAlignment="Center" Margin="14,0,14,74"/>
                                <ComboBox x:Name="colModeCmb" SelectedIndex="0" Width="120" Height="20" Margin="-6,31,0,49" HorizontalAlignment="Left" Background="#FF464646">
                                    <ComboBoxItem Content="Black and White" HorizontalAlignment="Left" Width="118"/>
                                    <ComboBoxItem Content="Color" HorizontalAlignment="Left" Width="118"/>
                                    <ComboBoxItem Content="Gray Scale" HorizontalAlignment="Left" Width="118"/>
                                </ComboBox>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Brightness" Margin="-2,0,-2,-2" Background="#FF464646">
                        <Grid Margin="0,9,0,-9">
                            <Grid.Background>
                                <SolidColorBrush Color="#FF646464"/>
                            </Grid.Background>
                            <Grid Height="149" Margin="10,10,49,0" VerticalAlignment="Top">
                                <Label x:Name="label0" Content="Brightness" Margin="-2,0,-51,10" HorizontalAlignment="Right" Width="241" Height="139"/>
                                <Slider  Maximum="255" TickPlacement="BottomRight" TickFrequency="5" Ticks="" x:Name="brightSl" Margin="10,26,64,104" Value="{Binding brightness}" Background="#FF464646"/>
                                <TextBox x:Name="textBox" Height="20"  Width="45" TextWrapping="Wrap" Text="{Binding Value, ElementName=brightSl, UpdateSourceTrigger=PropertyChanged}"  Margin="134,25,10,104" RenderTransformOrigin="1.212,-0.568"/>
                                <Label x:Name="label1" Content="Contrast" Margin="1,50,132,0" Height="24" VerticalAlignment="Top" RenderTransformOrigin="2.169,0.41"/>
                                <Slider x:Name="contrastSl" Value="{Binding contrast}" Margin="10,74,64,55" Maximum="255" TickPlacement="BottomRight" TickFrequency="5" RenderTransformOrigin="-0.745,0.332" Background="#FF464646"/>
                                <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="20" Margin="134,74,0,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=contrastSl, UpdateSourceTrigger=Default}" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.722,-0.329"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
                <Button x:Name="applyBtn" Content="Apply" HorizontalAlignment="Left" Margin="178,165,0,0" VerticalAlignment="Top" Width="75" Click="applyBtn_Click"/>
            </Grid>

        </Grid>
        <Grid x:Name="GridL" Margin="0,0,286,0">
            <Image x:Name="ScanView"/>
        </Grid>

    </Grid>
</Window>

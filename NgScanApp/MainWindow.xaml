<Window x:Name="NgScanApp" x:Class="NgScanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NgScanApp"
        mc:Ignorable="d"
        Title="NgScanApp" Height="600" Width="1024" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Black">
        <Grid x:Name="GridR" HorizontalAlignment="Right" Width="281" Background="#FF191919" Margin="0,-10,5,10">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="112,110,108,0">
                <Image Source="Scanner.png" Width="61" Height="58" VerticalAlignment="Top"/>
                <Label Content="Scan" Foreground="White" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" />
            </Grid>
            <Button x:Name="SettingsBtn" HorizontalAlignment="Left" Margin="18,21,0,0" VerticalAlignment="Top" Width="51" Click="onSettingsCliked" Height="34" RenderTransformOrigin="0.655,1.215" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}">
               <Image Source="settingsIco.png" OpacityMask="White" />
            </Button>
            <ComboBox x:Name="DeviceCmb" HorizontalAlignment="Center" Margin="89,199,72,0" VerticalAlignment="Top" Width="120" BorderBrush="#FFACACAC" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
            <ComboBox x:Name="DeviceIdCmb" HorizontalAlignment="Left" Margin="53,173,0,0" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
        </Grid>
        <Grid x:Name="GridL" Margin="0,0,286,0">
            <Image x:Name="ScanView"/>
        </Grid>

    </Grid>
</Window>
